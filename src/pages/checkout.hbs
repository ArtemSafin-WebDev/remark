{{#extend "layout"}}
{{#content "main"}}


<div class="breadcrumbs">
    <div class="container">
        <div class="inner-container">
            <div class="breadcrumbs__links">
                <a href="#" class="breadcrumbs__link">
                    Главная
                </a>
                <svg width="14" height="14" aria-hidden="true" class="icon-breadcrumbs-arrow">
                    <use xlink:href="#breadcrumbs-arrow"></use>
                </svg>
                <a href="#" class="breadcrumbs__link">
                    Корзина
                </a>
                <svg width="14" height="14" aria-hidden="true" class="icon-breadcrumbs-arrow">
                    <use xlink:href="#breadcrumbs-arrow"></use>
                </svg>
                <a href="#" class="breadcrumbs__link active">
                    Оформление заказа
                </a>
            </div>
        </div>
    </div>


</div>

<div class="page-heading">
    <div class="container">
        <div class="inner-container">
            <h1 class="section-heading">
                Оформление заказа
            </h1>
        </div>
    </div>
</div>



<section class="checkout">
    <div class="container">
        <div class="inner-container">
            <form action="/" method="POST" class="checkout__form" data-need-validation="">
                <div class="checkout__form-grid">
                    <div class="checkout__form-col">
                        <div class="checkout__form-field">
                            <label for="checkout-name" class="checkout__form-field-label">
                                Ваше имя
                                <span class="checkout__form-field-required"></span>
                            </label>
                            <input type="text" name="name" class="checkout__form-field-input" required
                                placeholder="Анатолий" id="checkout-name">
                        </div>
                    </div>
                    <div class="checkout__form-col">
                        <div class="checkout__form-field">
                            <label for="checkout-phone" class="checkout__form-field-label">
                                Телефон
                                <span class="checkout__form-field-required"></span>
                            </label>
                            <input type="tel" name="phone" class="checkout__form-field-input js-phone-input" required data-parsley-phone=""
                                placeholder="+7 ___-___-__-__" id="checkout-phone">
                        </div>
                    </div>
                    <div class="checkout__form-col checkout__form-col--high">
                        <div class="checkout__form-field">
                            <label for="checkout-comment" class="checkout__form-field-label">
                                Комментрий

                            </label>
                            <textarea name="comment" id="checkout-comment" class="checkout__form-field-input"
                                placeholder="Комментарий"></textarea>
                        </div>
                    </div>
                    <div class="checkout__form-col">
                        <div class="checkout__form-field">
                            <label for="checkout-email" class="checkout__form-field-label">
                                E-mail
                                <span class="checkout__form-field-required"></span>
                            </label>
                            <input type="email" name="email" class="checkout__form-field-input" required
                                placeholder="info@mail.ru" id="checkout-email">
                        </div>
                    </div>
                    <div class="checkout__form-col">
                        <div class="checkout__form-field" id="code-errors">
                            <label for="checkout-email" class="checkout__form-field-label">
                                Введите слово на картинке
                                <span class="checkout__form-field-required"></span>
                            </label>
                            <div class="checkout__form-code-wrapper">
                                <input type="text" name="code" class="checkout__form-field-input" required
                                    placeholder="" id="checkout-code" data-parsley-errors-container="#code-errors">

                                <div class="checkout__form-code-image-container">
                                    <img src="img/code.jpg" alt="" class="checkout__form-code-image">
                                </div>
                            </div>

                        </div>
                    </div>
                    <div class="checkout__form-col checkout__form-col--centered">
                        <label class="checkout__form-checkbox">
                            <input type="checkbox" value="yes" name="policy" class="checkout__form-checkbox-input"
                                required checked>
                            <span class="checkout__form-checkbox-mark">

                            </span>
                            <span class="checkout__form-checkbox-text">
                                Я согласен на обработку <a href="#">персональных данных</a>.*
                            </span>
                        </label>
                    </div>
                    <div class="checkout__form-col checkout__form-col--centered">
                        <div class="checkout__form-legend">
                            <span class="checkout__form-field-required"></span>
                            — Обязательные поля
                        </div>
                    </div>
                    <div class="checkout__form-col">
                        <button class="green-btn checkout__form-submit" type="submit">
                            Отправить
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>



{{/content}}
{{/extend}}